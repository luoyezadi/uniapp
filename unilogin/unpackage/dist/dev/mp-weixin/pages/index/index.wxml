<view class="content"><block wx:if="{{!hasLogin}}"><view class="userinfo"><view class="btn-row"><button type="default" data-event-opts="{{[['tap',[['bindLogin',['$event']]]]]}}" bindtap="__e">登录</button></view></view></block><block wx:else><view class="userinfo"><image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"></image><view class="userinfo-nickname">{{"姓名："+userInfo.nickName}}</view><block wx:if="{{userInfo.gender==0}}"><view class="userinfo-nickname">性别：未知</view></block><block wx:if="{{userInfo.gender==1}}"><view class="userinfo-nickname">性别：男</view></block><block wx:if="{{userInfo.gender==2}}"><view class="userinfo-nickname">性别：女</view></block><view class="btn-row"><button type="default" data-event-opts="{{[['tap',[['bindLogout',['$event']]]]]}}" bindtap="__e">退出</button></view></view></block></view>